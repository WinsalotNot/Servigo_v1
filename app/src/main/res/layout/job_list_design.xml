<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/job"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/rounded_corners"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:src="@drawable/profile" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="LOOKING FOR"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jtitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="Professional House keeper"
            android:textColor="#000000"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/jdescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="Job Description: clean house"
            android:textColor="#747474"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/jdateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="Date: 17/12/24"
            android:textColor="#747474"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/jpaymentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:textSize="11sp"
            android:text="per Month" />

        <TextView
            android:id="@+id/jhowmuchTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="Rp.502.500,00"
            android:textColor="#747474"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/jaddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="jakarta barat"
            android:textColor="#747474"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Requested Rank:" />

        <TextView
            android:id="@+id/jrequestedrankTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="S"
            android:textColor="#FDBF07"
            android:textSize="50sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Min:" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/jminstarTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4.9/5"
                android:textAlignment="viewStart"
                android:textColor="#000000" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>