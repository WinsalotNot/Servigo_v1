<!-- history -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history1"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/rounded_corners"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:src="@drawable/profile" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Hasanudin Alibama"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="Professional House keeper"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="Job Description: clean house"
            android:textColor="#747474"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="Date: 17/12/24"
            android:textColor="#747474"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="Price: Rp.502.500,00"
            android:textColor="#747474"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="Your Rating: 5/5"
            android:textColor="#747474"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="S"
            android:textColor="#FDBF07"
            android:textSize="50sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4.9/5"
                android:textAlignment="viewStart"
                android:textColor="#000000" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
